<div class="header">
  <div class="header__links">
    <div class="header__left">
      <%= link_to "Inicio", home_path, class: "header__link header__link--home" %>
      <%= link_to "Catálogo", stores_catalog_index_path, class: "header__link header__link--home" %>
    </div>
    <div class="header__right">
      <%= link_to "Saldo: #{current_store.final_balance}", stores_ledger_path, class: "header__link header__link--edit" %>
      <%= link_to current_store.name, edit_stores_path, class: "header__link header__link--edit" %>
      <%= link_to "Cerrar Sesión", sign_out_path, class: "header__link header__link--logout" %>
    </div>
  </div>
</div>
<div class="info-container">
  <div class="catalog-left">
    <div class="catalog-title">Cartola</div>
  </div>
</div>
<div class="catalog-body">
  <div class="catalog-container">
    <table class="catalog">
      <thead class="catalog-header-container">
        <tr class="catalog-header">
          <th class="catalog-header__label row-label row-label--big">FECHA</th>
          <th class="catalog-header__label row-label row-label--medium">MONTO</th>
        </tr>
      </thead>
      <tbody class="product-container">
        <% @ledger_lines.each do |ledger_line| %>
          <tr class="product">
            <td class="product__label row-label row-label--big"><%= ledger_line.entry_date.to_time(:local) %></td>
            <td class="product__label row-label row-label--medium"><%= ledger_line.amount.format %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
